<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivanilda.olamundo.MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/logo"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:src="@drawable/logo"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton1"
            android:background="@drawable/ic_settings_black_24dp"

            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pedidoView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Pedido_inc"
        android:textSize="@dimen/texto_padrao"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_top"/>

    <ImageButton
        android:layout_width="@dimen/botao_padrao"
        android:layout_height="@dimen/botao_padrao"
        android:id="@+id/imageButton2"
        android:background="@drawable/ic_launcher"
        android:layout_margin="@dimen/margin_widgeta"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="@dimen/botao_padrao"
        android:layout_height="@dimen/botao_padrao"
        android:id="@+id/imageButton3"
        android:background="@drawable/ic_bebidas"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:layout_width="@dimen/botao_padrao"
        android:layout_height="@dimen/botao_padrao"
        android:id="@+id/imageButton4"
        android:background="@drawable/ic_sobremesas"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
